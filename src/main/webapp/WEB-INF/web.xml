<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>ClassController</servlet-name>
  	<display-name>ClassController</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlet.ClassController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>StudentController</servlet-name>
  	<display-name>StudentController</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlet.StudentController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SubjectController</servlet-name>
  	<display-name>SubjectController</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlet.SubjectController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TeacherController</servlet-name>
  	<display-name>TeacherController</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlet.TeacherController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ClassController</servlet-name>
  	<url-pattern>/classes</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>StudentController</servlet-name>
  	<url-pattern>/students</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SubjectController</servlet-name>
  	<url-pattern>/subjects</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TeacherController</servlet-name>
  	<url-pattern>/teachers</url-pattern>
  </servlet-mapping>
</web-app>
